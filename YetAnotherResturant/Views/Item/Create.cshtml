@using YetAnotherResturant.DTO.ItemDTO
@model CreateItemDTO
<form action="/Item/Create" method="post">
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="inputEmail4">Item Name</label>
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        </div>
        <div class="form-group col-md-4">
            <label for="inputPassword4">Descrption</label>
            @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
        </div>
        <div class="form-group col-md-4">
            <label for="inputPassword4">Price</label>
            @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
        </div>
        <div class="form-group col-md-4">
            <label for="inputState">State</label>
            <select id="inputState" name="TypeId" class="form-control">
                <option selected>Choose Item type</option>
                @foreach (var type in (List<ItemType>)ViewBag.types)
                {
                    <option value="@type.Id">@type.Name</option>
                }
            </select>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
